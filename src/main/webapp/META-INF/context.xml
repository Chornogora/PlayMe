<?xml version="1.0" encoding="UTF-8"?>

<Context>
    <Resource name="jdbc/playme"
              auth="Container"
              type="javax.sql.DataSource"
              username="dbuser"
              password="userpass"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/playme"
              factory="org.apache.commons.dbcp2.BasicDataSourceFactory"
              validationQuery="SELECT COUNT(*) FROM roles"
    />
</Context>